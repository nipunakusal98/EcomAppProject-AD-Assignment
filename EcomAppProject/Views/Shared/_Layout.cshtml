<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Welcome to Ecom</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EcomAppProject.styles.css" asp-append-version="true" />
    <!--Bootstrap-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Categories" asp-action="Index">Ecom Computer Store</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                     <li class="navbar-nav flex-grow-1">
                            <a class="nav-link text-dark" asp-controller="Categories" asp-action="Index"><i class="badge-info bi-film"></i>Categories</a>
                     </li>

                       @* <li class="navbar-nav flex-grow-1">
                         <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" 
                         data-toggle="button" aria-haspopup="true" aria-expanded="false"><i class="bg-info bi-gear"></i>Manage
                     </a>*@

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="badge-info bi-gear"></i> Management
                            </a>

                     <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" asp-controller="CustmodelOrder" asp-action="Index">Customer Config Orders</a>
                                <a class="dropdown-item" asp-controller="CustmodelPayment" asp-action="Index">Customer Config Payments</a>
                                <a class="dropdown-item" asp-controller="Customerconfirguration" asp-action="Index">Customer Configurations</a>
                                <a class="dropdown-item" asp-controller="Customer" asp-action="Index">Customer</a>
                                <a class="dropdown-item" asp-controller="Employee" asp-action="Index">Employee</a>
                                <a class="dropdown-item" asp-controller="Memory" asp-action="Index">Memory</a>
                                <a class="dropdown-item" asp-controller="VGA" asp-action="Index">VGA</a>


                     </div>

                     </li>

                    </ul>
                    <form class="d-flex" asp-controller="Model" asp-action="Filter">
                        <input name="searchString" class="form-control me-2" type="search" placeholder="Search" aria-label="Search" aria-describedby="button-addon2">
                        <button class="btn btn-outline-success" type="submit"><i class="bi bi-search"></i></button>
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - EcomAppProject
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
