@*Define Model*@

@model IEnumerable<Employee>

@*Define ViewData*@

@{
    ViewData["Title"] = "Employee Details.";
}
<h1>Customers</h1>

<div class="row">
    <div class="col-md-offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model=>model.EmployeeName)</th>
                    <th>@Html.DisplayNameFor(model=>model.EmployeeEmail)</th>
                    <th>@Html.DisplayNameFor(model=>model.EmployeePassword)</th>
                    <th>@Html.DisplayNameFor(model=>model.EmployeeType)</th>
                    

                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.EmployeeName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.EmployeeEmail)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.EmployeePassword)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.EmployeeType)
                        </td>
                       

                        <td class="align-middle">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit</a>
                            <a class="btn btn-outline-info"><i class="bi bi-eye"></i>Details</a>
                            <a class="btn btn-danger"><i class="bi bi-trash"></i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>
