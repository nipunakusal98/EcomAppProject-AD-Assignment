@*Define Model*@

@model IEnumerable<CustomerConfiguredModelOrder>

@*Define ViewData*@

@{
    ViewData["Title"] = "Customer Configured Model Orders";
}
<h1>Customers</h1>

<div class="row">
    <div class="col-md-offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model=>model.CustomerConfigID)</th>
                    <th>@Html.DisplayNameFor(model=>model.ShippingAddress)</th>
                    <th>@Html.DisplayNameFor(model=>model.BillingAddress)</th>
                    <th>@Html.DisplayNameFor(model=>model.ShippingMethod)</th>
                    <th>@Html.DisplayNameFor(model=>model.OrderDate)</th>
                    <th>@Html.DisplayNameFor(model=>model.TotalAmount)</th>
                    <th>@Html.DisplayNameFor(model=>model.OrderStatus)</th>
                    <th>@Html.DisplayNameFor(model=>model.ConfigurationPrice)</th>


                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.CustomerConfigID)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.ShippingAddress)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.BillingAddress)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.ShippingMethod)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.OrderDate)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.TotalAmount)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.OrderStatus)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.ConfigurationPrice)
                        </td>


                        <td class="align-middle">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit</a>
                            <a class="btn btn-outline-info"><i class="bi bi-eye"></i>Details</a>
                            <a class="btn btn-danger"><i class="bi bi-trash"></i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>
