@*Define Model*@

@model IEnumerable<Memory>

@*Define ViewData*@

@{
    ViewData["Title"] = "List Of Memory Cards.";
}
<h1>Welcome</h1>

<div class="row">
    <div class="col-md-offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model=>model.MemoryPictureURL)</th>
                    <th>@Html.DisplayNameFor(model=>model.MemoryDescription)</th>
                    <th>@Html.DisplayNameFor(model=>model.MemoryPrice)</th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.MemoryPictureURL" style="max-width: 150px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.MemoryDescription)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.MemoryPrice)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit</a>
                            <a class="btn btn-outline-info"><i class="bi bi-eye"></i>Details</a>
                            <a class="btn btn-danger"><i class="bi bi-trash"></i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>


