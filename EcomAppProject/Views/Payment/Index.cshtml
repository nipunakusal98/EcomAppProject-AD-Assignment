@*Define Model*@

@model IEnumerable<Payment>

@*Define ViewData*@

@{
    ViewData["Title"] = "Payments.";
}
<h1>Customers</h1>

<div class="row">
    <div class="col-md-offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model=>model.OrderID)</th>
                    <th>@Html.DisplayNameFor(model=>model.Amount)</th>
                    <th>@Html.DisplayNameFor(model=>model.PaymentMethod)</th>
                    <th>@Html.DisplayNameFor(model=>model.PaymentDate)</th>
                    

                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>


                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.OrderID)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.PaymentMethod)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.PaymentDate)
                        

                        <td class="align-middle">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit</a>
                            <a class="btn btn-outline-info"><i class="bi bi-eye"></i>Details</a>
                            <a class="btn btn-danger"><i class="bi bi-trash"></i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>