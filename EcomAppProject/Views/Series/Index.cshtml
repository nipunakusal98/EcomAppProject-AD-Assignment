@model IEnumerable<EcomAppProject.Models.Series>

@{
    ViewData["Title"] = "Index";
}

<h1>Series</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SeriesName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SeriesPictureURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SeriesName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SeriesPictureURL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SeriesID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SeriesID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SeriesID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
