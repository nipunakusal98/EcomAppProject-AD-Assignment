@model IEnumerable<EcomAppProject.Models.Model>

@{
    ViewData["Title"] = "Index";
}

<h1>Models</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ModelName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModelPictureURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DefaultRAM)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DefaultVGA)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DefaultProcessor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DefaultOS)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DefaultAntivirus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DefaultModelPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Series)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ModelName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModelPictureURL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DefaultRAM)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DefaultVGA)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DefaultProcessor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DefaultOS)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DefaultAntivirus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DefaultModelPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Series.SeriesID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ModelID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ModelID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ModelID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
