@*Define Model*@

@model IEnumerable<Model>

@*Define ViewData*@

@{
    ViewData["Title"] = "Computer Models.";
}
<h1>Customers</h1>

<div class="row">
    <div class="col-md-offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model=>model.ModelPictureURL)</th>
                    <th>@Html.DisplayNameFor(model=>model.ModelName)</th>
                    <th>@Html.DisplayNameFor(model=>model.DefaultRAM)</th>
                    <th>@Html.DisplayNameFor(model=>model.DefaultVGA)</th>
                    <th>@Html.DisplayNameFor(model=>model.DefaultProcessor)</th>
                    <th>@Html.DisplayNameFor(model=>model.DefaultOS)</th>
                    <th>@Html.DisplayNameFor(model=>model.DefaultAntivirus)</th>
                    <th>@Html.DisplayNameFor(model=>model.DefaultModelPrice)</th>
                    <th>@Html.DisplayNameFor(model=>model.SeriesID)</th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.ModelPictureURL" style="max-width: 150px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.ModelName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.DefaultRAM)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.DefaultVGA)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.DefaultProcessor)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.DefaultOS)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.DefaultAntivirus)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.DefaultModelPrice)
                        </td>
                        <!--Series Details.... Should be name here, instead of SeriesID-->
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.SeriesID)
                        </td>

                        <td class="align-middle">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit</a>
                            <a class="btn btn-outline-info"><i class="bi bi-eye"></i>Details</a>
                            <a class="btn btn-danger text-white"><i class="bi bi-trash"></i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>
